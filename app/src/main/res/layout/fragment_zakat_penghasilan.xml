<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="8dp"
    tools:context=".ZakatPenghasilan">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Gaji Tiap Bulan:"
        android:textColor="@android:color/black"/>

    <EditText
        android:id="@+id/et_gaji_bulanan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:layout_marginBottom="8dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Hutang/Cicilan Tiap Bulan:"
        android:textColor="@android:color/black"/>

    <EditText
        android:id="@+id/et_cicilan_hutang"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:layout_marginBottom="8dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Harga Beras Saat Ini:"
        android:textColor="@android:color/black"/>

    <EditText
        android:id="@+id/et_harga_beras_penghasilan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:layout_marginBottom="8dp"/>

    <Button
        android:id="@+id/btn_hitung_penghasilan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Hitung"/>

</LinearLayout>